{
  "manifest_version": 2,

  "name": "Rate my Professor",
  "description": "This extension inject professor reviews into university websites",
  "version": "0.1",
  "content_scripts": [
      {
          "matches": ["*://quest.pecs.uwaterloo.ca/*"],
          "js": ["content.bundle.js"],
          "run_at": "document_end",
          "all_frames": true
      }
  ],
  "background": {
    "scripts": ["background.bundle.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Change Settings"
  },
  "web_accessible_resources": [
    "suggest.html"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}