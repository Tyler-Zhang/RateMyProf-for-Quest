{
  "manifest_version": 2,

  "name": "Waterloo Quest+",
  "description": "This extension inject professor reviews into university websites",
  "version": "1",
  "content_scripts": [
      {
          "matches": ["*://quest.pecs.uwaterloo.ca/*"],
          "js": ["content.bundle.js"],
          "run_at": "document_end",
          "all_frames": true
      }
  ],
  "background": {
    "scripts": ["background.bundle.js"]
  },
/*
  "browser_action": {
    "default_icon": "icon.png"  
    //"default_popup": "popup.html",
    //"default_title": "Change Settings"
  },*/
  "web_accessible_resources": [
    "suggest.html"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "icons": {
    "56": "icon256.png",
    "28": "icon128.png"
  }
}