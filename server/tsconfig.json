        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es2015",
        "outDir": "./bin/"
    },
    "compileOnSave": true,
    "include": [
        "src/**.*"
    ],
    "exclude": [
        "node_modules"
    ]
}